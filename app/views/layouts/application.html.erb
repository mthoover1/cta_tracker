<!DOCTYPE html>
<html>
<head>
  <title>TransitRails</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<nav>
    <div id="title">
    	<%= link_to "Chicago Train Tracker", root_url %>
    </div>
    <div id="nav-links">
      <% unless session[:id] %>
      <div><a href="/signup">Sign Up</a></div>
      <div><a href="/login">Login</a></div>
      <% end %>
      <% if session[:id] %>
      <div><a href="/profile">Profile</a></div>
      <div><a href="/logout">Logout</a></div>
      <% end %>
      <div><%= link_to "ReportBug" %></div>
    </div>
  </nav>

<%= yield %>

</body>
</html>
