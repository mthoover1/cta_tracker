<div class="station-header">
	<div class="sh-left">
		<% @station.lines.each do |line| %>
		<div class="station-color" style="height: <%= (1.0 / @station.lines.count * 100).to_s %>%; background-color: <%= line.color %>">
		</div>
		<% end %>
		<% case @line_count %>
		<% when 2 %>
			<div class="station-color-divider"></div>
		<% when 3 %>
			<div class="station-color-divider" style="top: -49px; height: 3px"></div>
			<div class="station-color-divider" style="top: -28px; height: 3px"></div>
		<% end %>
	</div>
	<div class="sh-center"><h2><%= @station.name %></div>
	<div class="sh-right">
		<% @station.lines.each do |line| %>
		<div class="station-color" style="height: <%= (1.0 / @station.lines.count * 100).to_s %>%; background-color: <%= line.color %>">
		</div>
		<% end %>
		<% case @line_count %>
		<% when 2 %>
			<div class="station-color-divider"></div>
		<% when 3 %>
			<div class="station-color-divider" style="top: -49px; height: 3px"></div>
			<div class="station-color-divider" style="top: -28px; height: 3px"></div>
		<% end %>
	</div>
</div>
